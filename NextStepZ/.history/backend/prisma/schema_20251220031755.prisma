// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  phone     String   @unique
  password  String
  firstName String?
  lastName  String?
  avatar    String?
  bio       String?
  role      String   @default("user") // "user" or "employer"
  isActive  Boolean  @default(true)
  
  // OTP fields for password reset
  otp           String?
  otpExpiry     DateTime?
  otpAttempts   Int      @default(0)
  lastOtpSentAt DateTime? // For rate limiting - prevent spam
  
  // Student-specific fields
  birthDate DateTime?
  province  String?
  school    String?
  major     String?
  
  // Recruiter-specific fields
  companyName String?
  website     String?
  address     String?
  taxId       String?
  
  profile   Profile?
  publicProfile PublicProfile?
  portfolio Portfolio?
  posts     Post[]
  comments  Comment[]
  likes     Like[]
  messages  Message[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// User Profile Model - Detailed profile for each user
model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Personal info (synced from User model during registration)
  firstName   String?
  lastName    String?
  email       String?
  phone       String?
  avatar      String?
  bio         String?
  
  // Education info
  province    String?  // Quê quán/Tỉnh thành
  school      String?  // Trường đại học
  major       String?  // Ngành học
  
  // Professional info
  title       String?  // Job title
  skills      String[] @default([])
  experience  String?
  education   String?
  
  // Social & Links
  socialLinks Json? // Store as JSON: [{platform: "linkedin", url: "..."}, ...]
  
  // Privacy settings
  isPublic    Boolean  @default(false)
  publicProfile PublicProfile?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("profiles")
}

// Public Profile Model - Shareable public profile
model PublicProfile {
  id          String   @id @default(cuid())
  profileId   String   @unique
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Share settings
  shareToken  String   @unique @default(cuid()) // Unique token for sharing
  isActive    Boolean  @default(true)
  sharedAt    DateTime @default(now())
  
  // View count
  viewCount   Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("public_profiles")
}

// Portfolio Model
model Portfolio {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  projects    Project[]
  isPublic    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("portfolios")
}

// Project Model
model Project {
  id          String   @id @default(cuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  imageUrl    String?
  link        String?
  technologies String[] @default([])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

// Post Model (for Community)
model Post {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  content     String
  imageUrl    String?
  
  comments    Comment[]
  likes       Like[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("posts")
}

// Comment Model
model Comment {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  content   String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comments")
}

// Like Model
model Like {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@map("likes")
}

// Message Model (for Messaging)
model Message {
  id          String   @id @default(cuid())
  senderId    String
  sender      User     @relation(fields: [senderId], references: [id], onDelete: Cascade)
  
  content     String
  isRead      Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("messages")
}
