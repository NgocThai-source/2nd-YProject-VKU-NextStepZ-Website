// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  phone     String   @unique
  password  String
  firstName String?
  lastName  String?
  avatar    String?
  bio       String?
  role      String   @default("user") // "user" or "employer"
  isActive  Boolean  @default(true)
  
  // OTP fields for password reset
  otp           String?
  otpExpiry     DateTime?
  otpAttempts   Int      @default(0)
  lastOtpSentAt DateTime? // For rate limiting - prevent spam
  
  // Student-specific fields
  birthDate DateTime?
  province  String?
  school    String?
  major     String?
  
  // Recruiter-specific fields
  companyName String?
  website     String?
  address     String?
  taxId       String?
  
  profile   Profile?
  publicProfile PublicProfile?
  portfolio Portfolio?
  savedPortfolios SavedPortfolio[]
  posts     Post[]
  comments  Comment[]
  likes     Like[]
  commentLikes CommentLike[]
  messages  Message[]
  questionViews QuestionView[]
  following Follow[]  @relation("UserFollowing")
  followers Follow[]  @relation("UserFollowers")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Follow Model - User follows another user
model Follow {
  id          String   @id @default(cuid())
  followerId  String   // User who is following
  followingId String   // User being followed
  
  follower    User     @relation("UserFollowing", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("UserFollowers", fields: [followingId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId]) // Prevent duplicate follows
  @@map("follows")
}

// User Profile Model - Detailed profile for each user
model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Personal info (synced from User model during registration)
  firstName   String?
  lastName    String?
  email       String?
  phone       String?
  avatar      String?
  bio         String?
  birthDate   DateTime?
  
  // Location info
  city        String?  // Thành phố/Tỉnh
  district    String?  // Quận/Huyện
  
  // Education info
  province    String?  // Quê quán/Tỉnh thành
  school      String?  // Trường đại học
  major       String?  // Ngành học
  
  // Professional info
  title       String?  // Job title
  objective   String?  // Career objective
  
  // Social & Links
  socialLinks Json? // Store as JSON: [{platform: "linkedin", url: "..."}, ...]
  
  // Privacy settings
  isPublic    Boolean  @default(false)
  publicProfile PublicProfile?
  
  // Employer Profile - Only for employers
  employerProfile EmployerProfile?
  
  // Career Profile - For storing career details
  careerProfile CareerProfile?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("profiles")
}

// Skill Model
model Skill {
  id              String   @id @default(cuid())
  careerProfileId String
  careerProfile   CareerProfile @relation(fields: [careerProfileId], references: [id], onDelete: Cascade)
  
  name            String
  level           String   @default("intermediate") // beginner, intermediate, advanced, expert
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("skills")
}

// Career Profile Model - For detailed career information
model CareerProfile {
  id              String   @id @default(cuid())
  profileId       String   @unique
  profile         Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  objective       String?  // Career objective (also stored in Profile.objective)
  experiences     Experience[]
  education       Education[]
  skills          Skill[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("career_profiles")
}

// Experience Model
model Experience {
  id              String   @id @default(cuid())
  careerProfileId String
  careerProfile   CareerProfile @relation(fields: [careerProfileId], references: [id], onDelete: Cascade)
  
  position        String
  company         String
  startDate       String   // Format: YYYY-MM-DD
  endDate         String?  // Format: YYYY-MM-DD
  isCurrent       Boolean  @default(false)
  description     String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("experiences")
}

// Education Model
model Education {
  id              String   @id @default(cuid())
  careerProfileId String
  careerProfile   CareerProfile @relation(fields: [careerProfileId], references: [id], onDelete: Cascade)
  
  school          String
  degree          String?
  field           String?
  graduationYear  String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("education")
}

// Employer Profile Model - For employers/recruiters
model EmployerProfile {
  id              String   @id @default(cuid())
  profileId       String   @unique
  profile         Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  // Company info
  industry        String?
  companySize     String?
  foundingYear    Int?
  about           String?
  website         String?
  address         String?  // Địa chỉ trụ sở
  
  // Job postings
  jobPostings     JobPosting[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("employer_profiles")
}

// Job Posting Model
model JobPosting {
  id              String   @id @default(cuid())
  employerProfileId String
  employerProfile EmployerProfile @relation(fields: [employerProfileId], references: [id], onDelete: Cascade)
  
  title           String
  description     String?
  location        String?
  salary          String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("job_postings")
}

// Public Profile Model - Shareable public profile
model PublicProfile {
  id          String   @id @default(cuid())
  profileId   String   @unique
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Share settings
  shareToken  String   @unique @default(cuid()) // Unique token for sharing
  isActive    Boolean  @default(true)
  sharedAt    DateTime @default(now())
  
  // View count
  viewCount   Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("public_profiles")
}

// Portfolio Model
model Portfolio {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  projects    Project[]
  isPublic    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("portfolios")
}

// Project Model
model Project {
  id          String   @id @default(cuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  imageUrl    String?
  link        String?
  technologies String[] @default([])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

// Saved Portfolio Model - Multiple portfolios per user with full JSON data
// Only for User (Student) role - stores complete portfolio data for /saved-portfolios
model SavedPortfolio {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name            String
  title           String
  headline        String?
  summary         String?
  photoUrl        String?
  contactJson     Json?    // {email, phone, city, district, facebook, github}
  skills          Json?    // {selected: [{id, name, level}]}
  experience      Json?    // {items: [{id, title, company, startDate, endDate, description, isCurrent}]}
  education       Json?    // {items: [{id, school, degree, field, graduationYear}]}
  projects        Json?    // {items: [{id, title, description, url, imageUrl}]}
  selectedTemplate Int     @default(1)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("saved_portfolios")
}

// Post Model (for Community) - Enhanced with topics, hashtags, images, and questions
model Post {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  content     String
  category    String   @default("discussion") // job-search, experience, discussion, question, offer, opportunity
  topics      String[] @default([])          // Topic IDs
  hashtags    String[] @default([])          // Hashtags like #React, #TypeScript
  images      String[] @default([])          // Image URLs
  
  // Question-specific fields (only used when category = 'question')
  title             String?                   // Question title
  tags              String[] @default([])     // Question tags
  viewCount         Int      @default(0)      // View count for questions
  isAnswered        Boolean  @default(false)  // Has accepted answer
  acceptedCommentId String?                   // ID of the accepted answer comment
  
  comments    Comment[]
  likes       Like[]
  questionViews QuestionView[]
  
  shareCount  Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("posts")
}

// Comment Model - Enhanced with reply support and likes
model Comment {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  parentId  String?                          // Parent comment for replies
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
  
  content   String
  
  likes     CommentLike[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comments")
}

// CommentLike Model - For liking comments
model CommentLike {
  id        String   @id @default(cuid())
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([commentId, userId])
  @@map("comment_likes")
}

// Like Model
model Like {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@map("likes")
}

// QuestionView Model - Track unique views per user per question
model QuestionView {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@map("question_views")
}

// Message Model (for Messaging)
model Message {
  id          String   @id @default(cuid())
  senderId    String
  sender      User     @relation(fields: [senderId], references: [id], onDelete: Cascade)
  
  content     String
  isRead      Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("messages")
}
